@page
@model ModerReviewsModel;
<head>
	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
	<link rel="stylesheet" href="css/bootstrap.min.css" />
	<link rel="stylesheet" href="css/slick.css" />
	<link rel="stylesheet" href="css/slick-theme.css" />
	<link rel="stylesheet" href="css/nouislider.min.css" />
	<link rel="stylesheet" href="css/font-awesome.min.css">
	<link rel="stylesheet" href="css/style.css" />
	<link rel="stylesheet" href="css/site.css" />

</head>
<body>
	<!-- HEADER -->
	<header>
		<!-- TOP HEADER -->
		<div id="top-header">
			<div class="container">
				<ul class="header-links pull-left">
					<li><a href="#"><i class="fa fa-phone"></i> +021-95-51-84</a></li>
					<li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
					<li><a href="#"><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</a></li>
				</ul>
				@{
					var isAuthenticated = false;
					var user = UserSessions.GetUser(HttpContext.Session);
					if (user != null)
						if (user.FirstName != null)
							isAuthenticated = true;

				}

				<ul class="header-links pull-right">

					@if (isAuthenticated)
					{
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<i class="fa fa-user-o"></i> @user.FirstName <b class="caret"></b>
							</a>
							<ul class="dropdown-menu" style="background: black;">
								<!-- Добавляем стиль color: black; -->
								<li><a href="/Profile"><i class="fa fa-user"></i> Профиль</a></li>
								<li><a href="/MyProducts"><i class="fa fa-shopping-bag"></i> Мои продукты</a></li>
								<li><a href="/Index?handler=Logout&returnUrl=@HttpContext.Request.Path"><i class="fa fa-sign-out"></i> Выход</a></li>
								@{
									var role = HttpContext.Session.GetInt32("RoleId");
								}
								@switch (role)
								{
									case 2:
										<li><a href="/Moderator"><i class="fa fa-sign-out"></i> Moder Page</a></li>
										break;
									case 3:
										<li><a href="/Admin"><i class="fa fa-sign-out"></i> Admin Page</a></li>
										break;
									case 4:
										<li><a href="/Director"><i class="fa fa-sign-out"></i> Director Page</a></li>
										break;
								}
							</ul>
						</li>
					}
					else
					{
						<li><a href="/Login"><i class="fa fa-user-o"></i> Login</a></li>
					}
				</ul>



			</div>
		</div>
		<!-- /TOP HEADER -->
		<!-- MAIN HEADER -->
		<div id="header">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- LOGO -->
					<div class="col-md-3">
						<div class="header-logo">
							<a href="./Index" class="logo">
								<img src="./img/logo.png" alt="">
							</a>
						</div>
					</div>
					<!-- /LOGO -->
					<!-- SEARCH BAR -->
					<div class="col-md-6">
						<div class="header-search">
							<form method="post" asp-page="/ProductSearch">
								<select class="input-select" name="categoryId">
									<option value="0">Категория</option>
									@foreach (var category in IndexModel.Categories)
									{
										<option value="@category.CategoryId">@category.Name</option>
									}
								</select>
								<input class="input" name="searchTerm" placeholder="Search here">
								<button type="submit" class="search-btn">Search</button>
							</form>
						</div>

					</div>
					<!-- /SEARCH BAR -->
					<!-- ACCOUNT -->
					<div class="col-md-3 clearfix">
						<div class="header-ctn">
							<!-- Cart -->
							<div>
								<a href="/Cart?action=load">
									<i class="fa fa-shopping-cart"></i>
									<span>Cart</span>

								</a>
							</div>
							<!-- /cart -->
							<!-- Menu Toogle -->
							<!-- /Menu Toogle -->
						</div>
					</div>
					<!-- /ACCOUNT -->
				</div>
				<!-- row -->
			</div>
			<!-- container -->
		</div>
		<!-- /MAIN HEADER -->
	</header>


	<div class="col-md-12">
		<a href="/Admin">To Admin Panel</a>
		<table class="table">
			<thead>
				<tr>
					<th>ProductId</th>
					<th>Rating</th>
					<th>Comment</th>
					<th>UserId</th>
					<th>CreatedAt</th>
					<!-- Добавьте другие заголовки столбцов здесь -->
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.Reviews)
				{
					<tr>
						<td><a href="/ProductInfo/@item.ProductId">@item.ProductId</a></td>
						<td><a href="/ProductInfo/@item.ProductId">@item.Rating</a></td>
						<td><a href="/ProductInfo/@item.ProductId">@item.Comment</a></td>
						<td><a href="/ProductInfo/@item.ProductId">@item.UserId</a></td>
						<td><a href="/ProductInfo/@item.ProductId">@item.CreatedAt</a></td>
					</tr>
				}
			</tbody>
		</table>

		<script src="js/jquery.min.js"></script>
		<script src="js/bootstrap.min.js"></script>
		<script src="js/slick.min.js"></script>
		<script src="js/nouislider.min.js"></script>
		<script src="js/jquery.zoom.min.js"></script>
		<script src="js/main.js"></script>
	</div>
</body>
