@page
@model MyProductsModel
@{
    ViewData["Title"] = "My Products";
}
<head>
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
	<link rel="stylesheet" href="css/bootstrap.min.css" />
	<link rel="stylesheet" href="css/slick.css" />
	<link rel="stylesheet" href="css/slick-theme.css" />
	<link rel="stylesheet" href="css/nouislider.min.css" />
	<link rel="stylesheet" href="css/font-awesome.min.css">
	<link rel="stylesheet" href="css/style.css" />
	<link rel="stylesheet" href="css/site.css" />
</head>
<!-- Стили для структуры продуктов -->

<body>
	<!-- HEADER -->
	<header>
		<!-- TOP HEADER -->
		<div id="top-header">
			<div class="container">
				<ul class="header-links pull-left">
					<li><a href="#"><i class="fa fa-phone"></i> +021-95-51-84</a></li>
					<li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
					<li><a href="#"><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</a></li>
				</ul>
				@{
					var isAuthenticated = false;
					var user = IndexModel.user;
					if (user!= null)
						if (user.FirstName != null)
							isAuthenticated = true;

				}

				<ul class="header-links pull-right">
					
					@if (isAuthenticated)
					{
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								<i class="fa fa-user-o"></i> @user.FirstName <b class="caret"></b>
							</a>
							<ul class="dropdown-menu" style="background: black;">
								<!-- Добавляем стиль color: black; -->
								<li><a href="/Profile"><i class="fa fa-user"></i> Профиль</a></li>
								<li><a href="/MyProducts"><i class="fa fa-shopping-bag"></i> MyProducts</a></li>
								<li><a href="/Index?handler=Logout&returnUrl=@HttpContext.Request.Path"><i class="fa fa-sign-out"></i> Выход</a></li>
							</ul>
						</li>
					}
					else
					{
						<li><a href="/Login"><i class="fa fa-user-o"></i> Login</a></li>
					}
				</ul>



			</div>
		</div>
		<!-- /TOP HEADER -->
		<!-- MAIN HEADER -->
		<div id="header">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- LOGO -->
					<div class="col-md-3">
						<div class="header-logo">
							<a href="./Index" class="logo">
								<img src="./img/logo.png" alt="">
							</a>
						</div>
					</div>
					<!-- /LOGO -->
					<!-- SEARCH BAR -->
					<div class="col-md-6">
						<div class="header-search">
							<form method="post" asp-page="/ProductSearch">
								<select class="input-select" name="categoryId">
									<option value="0">Категория</option>
									@foreach (var category in IndexModel.Categories)
									{
										<option value="@category.CategoryId">@category.Name</option>
									}
								</select>
								<input class="input" name="searchTerm" placeholder="Search here">
								<button type="submit" class="search-btn">Search</button>
							</form>
						</div>

					</div>
					<!-- /SEARCH BAR -->
					<!-- ACCOUNT -->
					<div class="col-md-3 clearfix">
						<div class="header-ctn">
							<!-- Cart -->
							<div>
								<a href="/Cart?action=load">
									<i class="fa fa-shopping-cart"></i>
									<span>Cart</span>
									
								</a>
							</div>
							<!-- /cart -->
							<!-- Menu Toogle -->
							
							<!-- /Menu Toogle -->
						</div>
					</div>
					<!-- /ACCOUNT -->
				</div>
				<!-- row -->
			</div>
			<!-- container -->
		</div>
		<!-- /MAIN HEADER -->
	</header>
</body>
<!-- /HEADER -->
<div class="col-md-12">
    <div class="section-title">
        <h3 class="title">My Products</h3>
        <div class="section-nav">
            <ul class="section-tab-nav tab-nav">
				<a asp-page="/CreateProduct" class="btn btn-primary">Создать продукт</a>
            </ul>
        </div>
		<div class="section-nav">
			<ul class="section-tab-nav tab-nav">
				<a asp-page="/MyOrders" class="btn btn-primary">Мои заказы</a>
			</ul>
		</div>
    </div>
</div>

<div class="col-md-12 products-container">
    @foreach (var product in Model.Products)
    {
		<div class="col-md-2">
			<!-- Оборачиваем весь товар в ссылку -->
			<a href="/ProductInfo/@product.ProductId" class="product-link">
				<div class="product">
					<div class="product-img">
						<img src="@product.ImageUrl" alt="@product.Name" width="100" height="200">
						<div class="product-label">
							<span class="new">NEW</span>
						</div>
					</div>
					<div class="product-body">
						<p class="product-category">@product.Category</p>
						<h3 class="product-name"><a href="#">@product.Name</a></h3>
						<h4 class="product-price">$@product.Price</h4>

					</div>
				</div>
			</a>
		</div>
    }
</div>
<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/slick.min.js"></script>
<script src="js/nouislider.min.js"></script>
<script src="js/jquery.zoom.min.js"></script>
<script src="js/main.js"></script>

