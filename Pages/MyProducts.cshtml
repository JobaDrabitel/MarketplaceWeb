@page
@model MyProductsModel
@{
    ViewData["Title"] = "My Products";
}

<!-- Стили для структуры продуктов -->
<style>
    .products-container {
        display: flex;
        flex-wrap: wrap;
    }

    .product-item {
        flex: 0 0 calc(20% - 20px); /* Распределение на 5 колонок в строке с отступами */
        margin: 10px;
        border: 1px solid #ddd;
        padding: 15px;
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .product-title {
        font-size: 20px;
        font-weight: bold;
    }

    .product-image img {
        max-width: 100%; /* Ограничьте максимальную ширину изображения по контейнеру */
        height: auto;
    }

    .product-info p {
        margin: 10px 0;
    }
</style>

<div class="col-md-12">
    <div class="section-title">
        <h3 class="title">My Products</h3>
        <div class="section-nav">
            <ul class="section-tab-nav tab-nav">
                <!-- Здесь можно добавить ваши категории, если нужно -->
            </ul>
        </div>
    </div>
</div>

<div class="col-md-12 products-container">
    @foreach (var product in Model.Products)
    {
        <div class="product-item">
            <div class="product-title">
                <h4>@product.Name</h4>
            </div>
            <div class="product-image">
                <a href="/ProductInfo/@product.ProductId">
                    <!-- Добавляем ссылку на ProductInfo с параметром ProductId -->
                    <img src="@product.ImageURL" alt="@product.Name"></img>
                </a>
            </div>
            <div class="product-info">
                <p>Description: @product.Description</p>
                <p>Price: $@product.Price</p>
                <p>Stock Quantity: @product.StockQuantity</p>
                <p>Category ID: @product.CategoryId</p>
                <p>Seller User ID: @product.SellerUserId</p>
                <p>Created At: @product.CreatedAt</p>
                <p>Updated At: @product.UpdatedAt</p>
            </div>
        </div>
    }
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/slick.min.js"></script>
    <script src="js/nouislider.min.js"></script>
    <script src="js/jquery.zoom.min.js"></script>
    <script src="js/main.js"></script>
</div>

